<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgSanh"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/girl" />

    <TextView
        android:id="@+id/tvTenSanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/imgSanh"
        app:layout_constraintStart_toStartOf="@+id/imgSanh"
        app:layout_constraintTop_toBottomOf="@+id/imgSanh" />

    <TextView
        android:id="@+id/tvGiaSanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tvTenSanh"
        app:layout_constraintStart_toStartOf="@+id/tvTenSanh"
        app:layout_constraintTop_toBottomOf="@+id/tvTenSanh" />

    <ImageView
        android:id="@+id/ivEditSanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTenSanh"
        app:layout_constraintStart_toEndOf="@+id/tvTenSanh"
        app:layout_constraintTop_toTopOf="@+id/tvTenSanh"
        app:srcCompat="@drawable/round_edit_24" />

    <ImageView
        android:id="@+id/ivDeleteSanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvGiaSanh"
        app:layout_constraintStart_toStartOf="@+id/ivEditSanh"
        app:layout_constraintTop_toTopOf="@+id/tvGiaSanh"
        app:srcCompat="@drawable/round_delete_24" />
</androidx.constraintlayout.widget.ConstraintLayout>